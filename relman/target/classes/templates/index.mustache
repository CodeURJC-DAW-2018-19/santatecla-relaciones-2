                                    <div class="form-group col-md-3">
                                        <span class="input-group-text">
                                            <p>Nombre:</p>
                                        </span>
                                    </div>
                                    <div class="form-group col-md-9">
                                        <input type="text" class="form-control mb-2 mr-sm-2" id="exampleInputUnit" placeholder="" name="newUnit">
                                    </div>
                                </div>
