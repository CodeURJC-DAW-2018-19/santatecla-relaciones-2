	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>	
	<script>
	function ajaxPag(id) {
			$(document).ready(function(){	
  				 var p= document.getElementById(id).value;
  				 var name =document.getElementById(id).name;
  				 console.log(name);
  	 		 	 $.ajax({url: "/"+name+"/"+ p +"/10", success: function(result){
  	 		 	 	var suma = parseInt(p) + parseInt(1);
  	 		 	 	document.getElementById(id).value= suma ; 
  	 		 	 	console.log(suma);
   	  			    var d1 = document.getElementById(id+name);
					d1.insertAdjacentHTML('beforeend', result);
					var n =document.getElementById(id).title;
					document.getElementById(id).title = parseInt(n) - parseInt(10); 
					var c = document.getElementById(id).title;
					if( c <=0 ){
					document.getElementById(id).disabled = true;
					document.getElementById(id).style.display = 'none';
					}	
   	 			}});	 		
		});
		}
	</script>	
</head>

<body>
    {{^student}}
        <!-- ModalLogin -->
        <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Login</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="card card-body">
                            <form action="/" method="post">
                                <div class="form-group">
                                    <label for="exampleInputUser1"><b>Usuario</b></label>
                                    <input type="text" class="form-control" id="exampleInputUser1" placeholder="Introduzca usuario" name="username">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1"><b>Contraseña</b></label>
                                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Introduzca contraseña" name="password">
                                </div>
                                <button type="submit" class="btn btn-primary">Entrar</button>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#reg">Registrarse</button>
                               <input type="hidden" name="_csrf" value="{{token}}" />

                            </form>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        {{/student}}


        <!-- ModalRegistro-->
        <div class="modal fade" id="reg" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Registro Nuevo Usuario</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="card card-body">
                            <form action="/register" method="post">
                                <div class="form-group">
                                    <label for="userInput"><b>Usuario</b></label>
                                    <input type="text" class="form-control" name="userInput" id="userInput" aria-describedby="userHelp" placeholder="Introduzca su nuevo nombre de usuario">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1"><b>Contraseña</b></label>
                                    <input type="password" class="form-control" name="pass1" id="exampleInputPassword1" placeholder="Introduzca la nueva contraseña">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword2"><b>Contraseña</b></label>
                                    <input type="password" class="form-control" name="pass2" id="exampleInputPassword2" placeholder="Repita la nueva contraseña">
                                </div>
                                <button type="submit" class="btn btn-danger">Registrarse</button>
