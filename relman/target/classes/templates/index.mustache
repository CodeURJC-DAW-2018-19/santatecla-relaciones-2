                                                        <ul class="nav navbar-nav">
															<li>
															<form>
	                                                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete{{.}}">
	                                                            	<i class="material-icons">delete_forever</i>
	                                                            </button>
	                                                            <input type="hidden" name="_csrf" value="{{token}}" />
                                                            </form>
                                                          </li>
                                                      	</ul>
                                                      	
