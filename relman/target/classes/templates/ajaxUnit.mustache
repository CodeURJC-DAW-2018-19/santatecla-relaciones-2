<table class="table">
    <tbody>
        {{#ajax}}
            <tr>
                <td><a href="{{origin}}">{{origin}}</a></td>
                {{#teacher}}
                    <!-- ModalDeletion -->
                    <div class="modal fade" id="delete{{origin}}{{type}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <div class="form-row">
                                        <div class="container text-center">
                                            <p>¿Estás seguro de querer eliminar este elemento?</p>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <div class="container text-right">
                                                <a href="/deleteRelation/{{type}}/{{origin}}/{{destiny}}" style="color:white"><button class="btn btn-danger">Eliminar</button></a>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <div class="container text-left">
                                                <a href="/{{destiny}}" style="color:white"><button class="btn">Cancelar</button></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <td class="td-actions text-right">
                        <button type="button" rel="tooltip" class="btn btn-danger" data-toggle="modal" data-target="#delete{{origin}}{{type}}">
                            <i class="material-icons">delete_forever</i>
                        </button>
                    </td>
                {{/teacher}}
            </tr>
        {{/ajax}}
    </tbody>
</table>
